# ========== APP ==========
APP_NAME=agency-management
ENV=production
SECRET_KEY=change_me_long_random
ALLOWED_HOSTS=your-domain.com,your-server-ip
CORS_ORIGINS=http://your-domain.com,http://localhost

# ========== AUTH ==========
ACCESS_TOKEN_EXPIRE_MINUTES=1440
PASSWORD_HASH_ROUNDS=12

# ========== DB (SQLite по умолчанию) ==========
DB_ENGINE=sqlite
SQLITE_PATH=/data/agency/db/app.db

# ========== DB (PostgreSQL прод) ==========
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=agency
POSTGRES_USER=agency
POSTGRES_PASSWORD=change_me

# ========== BACKUP ==========
BACKUP_DIR=/data/agency/backups
BACKUP_RETENTION_DAYS=30

# ========== NGINX / TLS ==========
NGINX_SERVER_NAME=your-domain.com
ENABLE_TLS=true
